<?xml version="1.0" encoding="UTF-8" ?>
        <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="vens.ai.graduate.design.notifaction.mapper.MessageTemplateMapper">
    <resultMap id="templateMap" type="vens.ai.graduate.design.notifaction.entity.MessageTemplate">
        <id column="m_id" property="templateId"/>
        <result column="m_name" property="templateName"/>
        <result column="m_template" property="template"/>
    </resultMap>
    <select id="findByName" resultMap="templateMap">
        select * from message_template where m_name=#{templateName}
    </select>
    <insert id="add" parameterType="vens.ai.graduate.design.notifaction.entity.MessageTemplate">
        insert into message_template(m_name,m_template)
        values(#{templateName,jdbcType=VARCHAR},
        #{template,jdbcType=VARCHAR})
    </insert>
</mapper>